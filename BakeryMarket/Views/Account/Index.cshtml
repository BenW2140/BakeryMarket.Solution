@{
  Layout = "_Layout";
}

@using System.Security.Claims

<h3>Create or sign in to an account</h3>

@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" value="Log out" class="btn btn-default">
  }
}
else
{
  <p>@Html.ActionLink("Create Account", "Register")</p>
  <p>@Html.ActionLink("Sign in", "Login")</p>
}
<p>@Html.ActionLink("Back Home", "Index", "Home")</p>